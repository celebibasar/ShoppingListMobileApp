<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ShoppingListMobileApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ShoppingListMobileApp"
    Shell.FlyoutBehavior="Flyout">

    <ShellContent
        Title="Login Page"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Register Page"
        ContentTemplate="{DataTemplate local:RegisterPageView}"
        Route="RegisterPageView" />
    <ShellContent
        Title="Item Page"
        ContentTemplate="{DataTemplate local:ItemPageView}"
        Route="ItemPageView" />
    <ShellContent
        Title="Profile Page"
        ContentTemplate="{DataTemplate local:ProfilePage}"
        Route="ProfilePage" />
    <ShellContent
        Title="Edit Page"
        ContentTemplate="{DataTemplate local:EditPageView}"
        Route="EditPageView" />
    <ShellContent
        Title="Cart Page"
        ContentTemplate="{DataTemplate local:CartPageView}"
        Route="CartPageView" />
    <ShellContent
        Title="Address Page"
        ContentTemplate="{DataTemplate local:AddressPageView}"
        Route="AddressPageView" />
    <ShellContent
        Title="Contact Page"
        ContentTemplate="{DataTemplate local:ContactPageView}"
        Route="ContactPageView" />
    


</Shell>

